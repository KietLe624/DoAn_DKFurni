@model IEnumerable<DKFuni_MVC.Models.Product_Category>
@{
        ViewBag.Title = "Shop";
    }
<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            <!-- Start Column 1 -->
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" href="@Url.Action("Detail", new { id = @item.ProId })">
                        <img src="~/images/@item.ProImage" class="img-fluid product-thumbnail">
                        <h3 class="product-title">@item.CatName</h3>
                        <strong class="product-price">$@item.ProPrice</strong>
                        <span class="icon-cross">
                            <img src="~/images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
                <!-- End Column 1 -->
            }
        </div>
    </div>
</div>
